<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyMainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AppBarBottomFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include android:id="@+id/lyFragmentCard" layout="@layout/fragment_card"/>
            <include android:id="@+id/lyFragmentTextField" layout="@layout/fragment_text_field"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- app:hideOnScroll="true" => Permite que cuando scrolle hacia abajo desaparezca el bottomappbar-->
    <!-- app:fabAlignmentMode="end" => Indica donde estara el fab-->
    <!-- app:fabAnimationMode="scale" => Indica la forma de animacion del fab al hacer click-->
    <!-- app:fabCradleMargin="@dimen/common_padding_default" => Indica el margen entre el boton y el bottomAppBar-->
    <!-- app:fabCradleRoundedCornerRadius="@dimen/common_padding_middle" => Indica el redondeo de las esquinas cerca del fab-->
    <!-- app:fabCradleVerticalOffset="@dimen/common_padding_default" => El margen entre el centro del fab y el bottomAppBar-->

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/babMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:navigationIcon="@drawable/ic_timeline"
        app:navigationIconTint="@color/white"
        app:hideOnScroll="true"
        app:menu="@menu/bottom_nav_menu"
        app:fabAlignmentMode="end"
        app:fabAnimationMode="scale"
        app:fabCradleMargin="@dimen/common_padding_default"
        app:fabCradleRoundedCornerRadius="@dimen/common_padding_middle"
        app:fabCradleVerticalOffset="@dimen/common_padding_default"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        app:layout_anchor="@id/babMain"
        app:backgroundTint="@color/black"
        app:tint="@color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>